{% extends '::layout.html.twig' %}

{% form_theme form _self %}

{% block fileUpload_widget %}
    {% spaceless %}
        <div>
            <label for="file" class="btn btn-default" style="width: 135px; height: 20px; display: block; position: absolute; top: 50%; left: 50%; box-sizing: content-box; transform: translate(-50%, -50%); background-color: #591820; color: #F3F3F3;">
                <i class="glyphicon glyphicon-picture"></i>
                Choisir une image
            </label>
            <input id="file" class="ajax_file hidden" type="file" data-target="{{ path('decibels_file_uploadFile') }}">

            <div class="progress hidden" style="height: 5px; width: 80%; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                <div class="progress-bar progress-bar-success" style="background-color: #FFEB3B;"></div>
            </div>
            <div class="hidden" id="output" style="width: 100%">   
                <img src="" alt="preview" style="cursor: move; position: absolute; top: 0; left: 0;"/>
            </div>
            <input name="file_id" type="hidden">
        </div>
    {% endspaceless %}
{% endblock fileUpload_widget %}



{% block title %}Ajouter une image - DÃ©cibels{% endblock %}

{% block body %}
	<h2 class="text-center">Ajouter une image au carrousel</h2>
	<div id="preview" style="border: 1px solid #591820; overflow: hidden; padding: 0;" class="col-md-12 text-center">
		{{ form(form) }}
	</div>
    <input id="test" type="range" class="col-md-4 col-md-offset-4 hidden" min="1" max="3" step="0.1" value="1" style="margin-top: 10px;"/>
    <button type="Submit" form="carrousel_form" class="btn btn-default col-md-offset-5 col-md-2 hidden">Ajouter</button>
{% endblock %}



{% block javascript %}
<script>
    
    var $ratio = $("#decibels_generalbundle_carrousel_ratio");
    
    $ratio.val($('#preview').width() / 1000);
    
    $('#preview').height($('#preview').width() * 0.45 + "px");

    $(window).resize(function () {
        $('#preview').height($('#preview').width() * 0.45 + "px");
        $ratio.val($('#preview').width() / 1000);
    });
    
    $('.ajax_file').on('change', function(){
        var $this = $(this);
        var $loadingBar = $this.siblings('.progress').children();
        var $label = $this.siblings('label');
        var $input = $this.siblings('input[type=hidden]');
        var $clipTop = $("#decibels_generalbundle_carrousel_topClip");
        var $clipLeft = $("#decibels_generalbundle_carrousel_leftClip");
        var $zoom = $("#decibels_generalbundle_carrousel_zoom");
        
        
        $zoom.val(1);
        $clipTop.val(0);
        $clipLeft.val(0);

        var file = $this[0].files[0];
        var baseUrl = "{{ asset('') }}";

        $label.remove();
        $loadingBar.parent().removeClass('hidden');
        
        var data = new FormData();
        data.append('fileUpload[file]', file);
        data.append('webDirPath', '/carrousel');
        
        $.ajax({
            type: 'POST',
            url: $this.data('target'),
            data: data,
            contentType: false,
            processData: false,
            xhr: function()
            {
                var xhr = $.ajaxSettings.xhr();

                xhr.upload.addEventListener("progress", function(e){
                    $loadingBar.css('width', e.loaded / e.total * 100 + '%');
                }, false);

                return xhr;
            },
            success: function(response){
                $loadingBar
                    .css('width', '100%').parent().fadeOut(100);
                $input.val(response.id);
                var maxH = 0;
                var maxW = 0;
                var minWidth = $("#preview").width();
                $("#output").children().first().width(minWidth +'px');
                $("#output").children().first().on('load', function () {
                   maxW = $('#preview').width() - $("#output").children().first().width();
                   maxH = $('#preview').height() - $("#output").children().first().height(); 
                });
                $("#output").children().first().hide().attr("src", baseUrl + "uploads/carrousel/" + response.name).fadeIn(100);
                $("#output").removeClass('hidden');
                var currentPos = {
                    top: 0,
                    left: 0
                }
                $("#output").children().first().draggable({
                     drag: function(event, ui) {
                         if(ui.position.top > 0) {
                             ui.position.top = 0;
                         } 
                         if(ui.position.top < maxH) {
                             ui.position.top = maxH;
                         }
                         if(ui.position.left > 0) {
                             ui.position.left = 0;
                         } 
                         if(ui.position.left < maxW) {
                             ui.position.left = maxW;
                         }
                         currentPos.top = ui.position.top;
                         currentPos.left = ui.position.left;
                         $clipLeft.val(ui.position.left);
                         $clipTop.val(ui.position.top);
                     }
                 });
                 var currentZoom = 1;
                 $("input[type='range']").removeClass("hidden").on('input', function () {
                    var oldZoom = currentZoom;
                    currentZoom = $("input[type='range']").val();
                    $zoom.val(currentZoom);
                    $("#output").children().first().width(minWidth * currentZoom + 'px');
                    maxW = $('#preview').width() - $("#output").children().first().width();
                    maxH = $('#preview').height() - $("#output").children().first().height();
                    currentPos.top = currentPos.top - ($("#output").children().first().height() - $("#output").children().first().height()/currentZoom*oldZoom)/2;
                    currentPos.left = currentPos.left - ($("#output").children().first().width() - $("#output").children().first().width()/currentZoom*oldZoom)/2
                    $("#output").children().first().css('top', currentPos.top + 'px');
                    $("#output").children().first().css('left', currentPos.left + 'px');
                 });
                 
                 $('button[type="submit"]').removeClass('hidden');                 
                
                $this.remove();
            },
            error: function(response){
                $loadingBar
                    .css('width', '100%')
                    .removeClass('progress-bar-success')
                    .css("backgroundColor", '#591820');
                $("#output")
                    .html('Erreur')
                    .css("color", '#591820')
                    .removeClass('hidden');
                $this.remove();
            }
        });
    });
</script>
{% endblock %}

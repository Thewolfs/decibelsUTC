{% extends '::layout.html.twig' %}

{% block title %}Nos réalisations - Décibels{% endblock %}

{% block body %}
	<div style="height: 30px; padding: auto; line-height: 30px; border-bottom: 2px solid #591820; box-sizing: content-box;">
		<a id="event" style="border-bottom: 1px solid #591820; text-align: center; background-color: #591820; color: #FFEB3B; width: 75px;  height: 30px; display: inline-block; text-decoration: none; cursor: pointer;">Live</a></span>
		<a id="mao" style="border-bottom: 1px solid #591820; text-align: center; width: 75px; height: 30px;  display: inline-block; text-decoration: none; cursor: pointer;">Studio</a></span>
	</div>
	<div id="eventBox" style="position: absolute;">
		{% for rea in listRea %}
			{% if rea.event %}
				<div style="padding: 5px;  box-shadow: 0px 2px #591820;">
					<h4 style="color: #591820; font-weight: bold;">{{ rea.nom }}</h4>
					{{ rea.description|raw }}
					{% if rea.url %}
					<div class="text-right" style="min-widht: 100%;">
						<a href="{{ rea.url }}" style="color: #591820;"><span class ='glyphicon glyphicon-chevron-right' style="top: 2px;"></span> Voir la réalisation</a>
					</div>
					{% endif %}
				</div>
			{% endif %}
		{% endfor %}
	</div>
	<div id="MAOBox" style="position: absolute;">
		{% for rea in listRea %}
			{% if not rea.event %}
				<div style="padding: 5px;  box-shadow: 0px 2px #591820;">
					<h4 style="color: #591820; font-weight: bold;">{{ rea.nom }}</h4>
					{{ rea.description|raw }}
					{% if rea.url %}
					<div class="text-right" style="min-widht: 100%;">
						<iframe width="100%" height="110" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url={{ rea.url }}&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
					</div>
					{% endif %}
				</div>
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}

{% block javascript %}
	<script>
		$("#MAOBox").fadeOut(0);
		
		$("#event").click(function (e) {
			e.preventDefault();
			$("#MAOBox").fadeOut(100);
			$("#eventBox").fadeIn(100);
			
			$("#event").css("background-color", "#591820");
			$("#event").css("color", "#FFEB3B");
			
			$("#mao").css("background-color", "#F3F3F3");
			$("#mao").css("color", "#591820");
		});
		
		$("#mao").click(function (e) {
			e.preventDefault();
			$("#eventBox").fadeOut(100);
			$("#MAOBox").fadeIn(100);
			
			$("#mao").css("background-color", "#591820");
			$("#mao").css("color", "#FFEB3B");
			
			$("#event").css("background-color", "#F3F3F3");
			$("#event").css("color", "#591820");
		});
	</script>
{% endblock %}
